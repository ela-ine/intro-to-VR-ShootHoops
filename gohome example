using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class GoHomePrinter : MonoBehaviour {

  public Vector2 startLocation = new Vector2(0.0f, 0.0f);
  public Vector2 homeLocation = (10.0f, 5.0f);
  public boolean isHome = False

  void Start () {
    print ("Hello, welcome to Go Home!");
    print ("You start at: " + startLocation);
  }

  void Update () {
    if (!isHome) {
      if (Input.GetKeyDown (KeyCode.UpArrow)) {
        startLocation = startLocation + new Vector2(0.0f, 1.0f);
        print ("Location is now: " + startLocation);
      }
      if (Input.GetKeyDown (KeyCode.DownArrow)) {
        startLocation = startLocation + new Vector2(0.0f, -1.0f);
        print ("Location is now: " + startLocation);
      }
      if (Input.GetKeyDown (KeyCode.LeftArrow)) {
        startLocation = startLocation + new Vector2(-1.0f, 0.0f);
        print ("Location is now: " + startLocation);
      }
      if (Input.GetKeyDown (KeyCode.UpArrow)) {
        startLocation = startLocation + new Vector2(1.0f, 0.0f);
        print ("Location is now: " + startLocation);
      }
      if (startLocation == homeLocation) {
        print("you're home dude");
      }
    }
    if (startLocation = homeLocation) {
      print("You're home!")
      isHome = True
    }
  }
}
